<da:ThemeApplication x:Class="ThemeCreator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:da="clr-namespace:DesktopApplication;assembly=DesktopApplication"
             StartupUri="MainWindow.xaml">
    <da:ThemeApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DesktopApplication;component/View/Styles/TitleBarStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/DesktopApplication;component/View/Styles/ScrollViewerStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/DesktopApplication;component/View/Styles/BrushesAndColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </da:ThemeApplication.Resources>
</da:ThemeApplication>
