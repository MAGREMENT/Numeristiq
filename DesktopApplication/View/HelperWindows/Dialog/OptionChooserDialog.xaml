<dialog:DialogWindow x:Class="DesktopApplication.View.HelperWindows.Dialog.OptionChooserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialog="clr-namespace:DesktopApplication.View.HelperWindows.Dialog"
        mc:Ignorable="d"
        Title="OptionChooserDialog"
        SizeToContent="WidthAndHeight"
        d:DesignHeight="100">
    <Border Background="{DynamicResource BackgroundDeep}" BorderBrush="{DynamicResource BackgroundHighlighted}"
            BorderThickness="1" Width="250" Padding="10 5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
            <TextBlock Grid.Row="0" FontSize="20" Margin="0 5 0 0" FontWeight="SemiBold"
                       Foreground="{DynamicResource Text}" VerticalAlignment="Center"
                       HorizontalAlignment="Center" x:Name="OptionName">Name</TextBlock>
        
            <StackPanel Grid.Row="1" x:Name="Panel" Margin="0, 10, 0, 0"/>
        </Grid>
    </Border>
</dialog:DialogWindow>
