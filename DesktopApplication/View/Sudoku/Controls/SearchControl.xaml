<UserControl x:Class="DesktopApplication.View.Sudoku.Controls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DesktopApplication.View.Sudoku.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{DynamicResource Background2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Style="{StaticResource SearchTextBox}" x:Name="Box" Margin="5" TextChanged="Box_OnTextChanged">Search</TextBox>
        
        <ScrollViewer Grid.Row="1" Style="{StaticResource TransparentBarScrollView}">
            <StackPanel x:Name="ResultPanel"/>
        </ScrollViewer>
    </Grid>
</UserControl>
