<UserControl x:Class="DesktopApplication.View.Tectonic.Controls.EmbeddedTectonicBoardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DesktopApplication.View.Tectonic.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Padding="10" Background="{StaticResource Background2}" x:Name="Border">
        <Grid>
            <local:TectonicBoard VerticalAlignment="Center" HorizontalAlignment="Center"
                                 BackgroundBrush="Transparent" LineBrush="{StaticResource Text}"
                                 DefaultNumberBrush="{StaticResource Text}" x:Name="Board"
                                 BigLineWidth="5" SmallLineWidth="1" CellSize="50"
                                 RowCountChanged="OnRowCountChange" ColumnCountChanged="OnColumnCountChange"/>
            
            <TextBlock Visibility="Collapsed" x:Name="None" FontSize="22" Foreground="{StaticResource Text}"
                   FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">Nothing to show...</TextBlock> 
        </Grid>
    </Border>
</UserControl>
