<Window x:Class="DesktopApplication.View.PageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:DesktopApplication.View.Controls"
        mc:Ignorable="d"
        d:DesignHeight="750"
        d:DesignWidth="1400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40"/>
    </WindowChrome.WindowChrome>
    
    <Grid Background="{DynamicResource Background1}" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <controls:TitleBarControl Grid.Row="0" Grid.Column="0" AppIconClick="ReturnToWelcomeWindow"
                                  x:Name="TitleBar" Minimize="Minimize" ChangeSize="ChangeSize" Close="Close"
                                  AllowResize="True" AppIcon="Images/appicon.png" AppTitle="Numeristiq"/>
        
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" Grid.Column="0"
               x:Name="Frame" Navigating="CancelNavigation" Background="{DynamicResource BackgroundDeep}"/>
    </Grid>
</Window>
