<Window x:Class="NewView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewView"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <local:TectonicBoard CellSize="70" RowCount="5" ColumnCount="4" SmallLineWidth="1" BigLineWidth="3" x:Name="Board">
            <local:TectonicBoard.Borders>
                <local:NeighborBorder Direction="Horizontal" InsideRow="0" InsideColumn="0" IsThin="True"/>
                <local:NeighborBorder Direction="Vertical" InsideRow="0" InsideColumn="0" IsThin="True"/>
                <local:NeighborBorder Direction="Vertical" InsideRow="1" InsideColumn="2" IsThin="True"/>
            </local:TectonicBoard.Borders>
        </local:TectonicBoard>
    </Grid>
</Window>
