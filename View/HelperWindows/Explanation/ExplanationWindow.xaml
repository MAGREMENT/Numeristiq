<helperWindows:HelperWindow x:Class="View.HelperWindows.Explanation.ExplanationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:View.Pages.Solver.UserControls"
        xmlns:helperWindows="clr-namespace:View.HelperWindows"
        mc:Ignorable="d"
        Title="ExplanationWindow" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal">
        <local:SolverUserControl Margin="10" x:Name="Grid"/>
        <TextBlock x:Name="Explanation" TextWrapping="Wrap" Width="400" Margin="10" FontSize="15"/>
    </StackPanel>
</helperWindows:HelperWindow>
