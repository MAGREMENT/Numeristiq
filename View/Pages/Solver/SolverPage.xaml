<Page x:Class="View.Pages.Solver.SolverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:view="clr-namespace:View"
      xmlns:utils="clr-namespace:View.Utils"
      xmlns:userControls="clr-namespace:View.Pages.Solver.UserControls"
      xmlns:globalUserControls="clr-namespace:View.GlobalUserControls"
      mc:Ignorable="d"
      Title="SolverPage">
    <StackPanel Orientation="Vertical">
        <globalUserControls:CustomNavigationUserControl x:Name="Navigation"/>
        <StackPanel Orientation="Horizontal" Background="{x:Static utils:ColorManager.Background1}">
        
            <StackPanel Orientation="Vertical" Width="590">
                <userControls:SolverUserControl HorizontalAlignment="Center" x:Name="Solver"/>
                <TextBox Width="500" FontSize="20" VerticalContentAlignment="Center" Height="30" Margin="10" TextChanged="NewSudoku"
                     HorizontalAlignment="Center" x:Name="SudokuStringBox"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Width="200" Height="30" Click="SolveSudoku" HorizontalAlignment="Center"
                        Margin="0, 0, 10, 0" x:Name="SolveButton">Solve</Button>
                    <Button Width="200" Height="30" Click="ClearSudoku" HorizontalAlignment="Center"
                        Margin="10, 0, 0, 0" x:Name="ClearButton">Clear</Button>
                </StackPanel>
            </StackPanel>
        
            <StackPanel Width="350">
                <userControls:LogListUserControl x:Name="LogList"/>
                <TextBox Width="320" Height="200" Background="{x:Static utils:ColorManager.Background2}" x:Name="ExplanationBox"
                     Margin="0, 10, 0, 0" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="12"/>
            </StackPanel>
        
            <StackPanel Width="200">
                <userControls:StrategyListUserControl x:Name="StrategyList"/>
            </StackPanel>
        
        </StackPanel>
    </StackPanel>
</Page>
