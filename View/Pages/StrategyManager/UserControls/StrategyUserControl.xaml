<UserControl x:Class="View.Pages.StrategyManager.UserControls.StrategyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border x:Name="LowerBorder" BorderThickness="0, 0, 0, 2.5" BorderBrush="Transparent"> 
        <Border x:Name="UpperBorder" BorderThickness="0, 2.5, 0, 0" BorderBrush="Transparent">
            <TextBlock FontSize="18" x:Name="TextBlock" TextWrapping="Wrap"/>
        </Border>
    </Border>
</UserControl>
