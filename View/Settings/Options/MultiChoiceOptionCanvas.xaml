<settings:OptionCanvas x:Class="View.Settings.Options.MultiChoiceOptionCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:View.Settings"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal" x:Name="Panel">
        <TextBlock Margin="0, 0, 5, 0" VerticalAlignment="Center" x:Name="TextBlock"></TextBlock>
    </StackPanel>
</settings:OptionCanvas>
