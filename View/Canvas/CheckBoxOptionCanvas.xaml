<canvas:OptionCanvas x:Class="View.Canvas.CheckBoxOptionCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:View.HelperWindows.Settings"
             xmlns:canvas="clr-namespace:View.Canvas"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <CheckBox Checked="OnChecked" Unchecked="OnUnchecked" x:Name="Box" VerticalContentAlignment="Center"
              Foreground="{DynamicResource Text}"></CheckBox> 
</canvas:OptionCanvas>
