<canvas:OptionCanvas x:Class="View.Canvas.ColorComboBoxOptionCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:View.HelperWindows.Settings"
             xmlns:canvas="clr-namespace:View.Canvas"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <TextBlock Margin="0, 0, 5, 0" VerticalAlignment="Center" x:Name="Block"></TextBlock>
        <ComboBox Width="110" IsReadOnly="True" VerticalAlignment="Center" SelectionChanged="OnSelectionChange" x:Name="Box"/>
    </StackPanel>
</canvas:OptionCanvas>
