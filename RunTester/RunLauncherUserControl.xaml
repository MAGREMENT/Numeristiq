<UserControl x:Class="RunTester.RunLauncherUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="30" Width="100" Margin="0, 0, 10, 0" Click="Start">Start</Button>
            <Button Height="30" Width="100" Margin="0, 0, 10, 0" Click="Cancel">Cancel</Button>
            <TextBlock Height="30" Width="30" Background="Red" x:Name="RunStatus"></TextBlock>
        </StackPanel>
        <ScrollViewer Height="450" Width="518" x:Name="Scroll">
            <TextBlock Width="500" MinHeight="450" x:Name="Console" Background="WhiteSmoke"/>
        </ScrollViewer>
    </StackPanel>
</UserControl>
