<UserControl x:Class="RunTester.RunPickerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RunTester"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="FileName" FontSize="12" Margin="0, 0, 0, 10" Background="WhiteSmoke" HorizontalAlignment="Center"/>
        <Button Click="PickFile" HorizontalAlignment="Center" Height="30" Width="100">Pick file</Button>
    </StackPanel>
</UserControl>
