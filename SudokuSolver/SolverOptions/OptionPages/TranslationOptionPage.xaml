<solverOptions:OptionPage x:Class="SudokuSolver.SolverOptions.OptionPages.TranslationOptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:solverOptions="clr-namespace:SudokuSolver.SolverOptions"
      mc:Ignorable="d"
      Title="TranslationOptionPage" Height="400" Width="450">
    <StackPanel Height="400" Width="450">
        <StackPanel Orientation="Horizontal" Margin="10, 10, 0, 0" >
            <TextBlock Margin="0, 0, 5, 0" VerticalAlignment="Center">Translation</TextBlock>
            <ComboBox Width="110" Focusable="False" IsEditable="True" IsReadOnly="True" SelectedIndex="0"
                      VerticalAlignment="Center" SelectionChanged="SelectedTranslationType" x:Name="Type">
                <TextBlock Focusable="False">With shortcuts</TextBlock>
                <TextBlock Focusable="False">With 0's</TextBlock>
                <TextBlock Focusable="False">With .'s</TextBlock>
            </ComboBox>
        </StackPanel>
    </StackPanel>
</solverOptions:OptionPage>
