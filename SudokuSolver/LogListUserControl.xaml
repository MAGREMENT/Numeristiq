<UserControl x:Class="SudokuSolver.LogListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:inf="clr-namespace:SudokuSolver.Utils"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Width="320" Height="450" Orientation="Vertical">
        <StackPanel Width="320" Height="30" Orientation="Horizontal"  Margin="0, 10, 0, 10">
            <Button Width="140" Height="30" Margin="10, 0" Click="ShowStart">Show Start</Button>
            <Button Width="140" Height="30" Margin="10, 0" Click="ShowCurrent">Show Current</Button>
        </StackPanel>
        <ScrollViewer Height="400" x:Name="Scroll" Background="{x:Static inf:ColorManager.Background2}">
            <StackPanel Width="300" MinHeight="400" x:Name="List"/>
        </ScrollViewer>
    </StackPanel>
</UserControl>
