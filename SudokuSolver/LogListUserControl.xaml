<UserControl x:Class="SudokuSolver.LogListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SudokuSolver"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Width="320" Height="450" Orientation="Vertical">
        <ScrollViewer Height="400" Margin="0, 10, 0, 0" Width="320" x:Name="Scroll" Background="WhiteSmoke">
            <StackPanel Width="300" MinHeight="400" x:Name="List"/>
        </ScrollViewer>
        <Button Width="150" Height="30" HorizontalAlignment="Center" Margin="0, 10, 0, 0"
                Click="ShowCurrent">To current state</Button>
    </StackPanel>
</UserControl>
